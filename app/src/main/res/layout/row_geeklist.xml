<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout style="@style/RowContainer.VeryTall"
			  xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:background="?android:attr/selectableItemBackground"
			  android:orientation="vertical">

	<TextView
		android:id="@+id/title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="4dp"
		android:textAppearance="@style/TextAppearance.RowTitle"
		tools:text="My favorite things"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/creator"
			style="@style/TextWithImage"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableLeft="@drawable/ic_user_small"
			tools:text="ccomeaux"/>

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="@dimen/padding_standard"
			android:layout_marginRight="@dimen/padding_standard"
			android:background="@color/list_divider"/>

		<TextView
			android:id="@+id/number_of_items"
			style="@style/TextWithImage.Secondary"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableLeft="@drawable/ic_items_small"
			tools:text="42"/>

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="@dimen/padding_standard"
			android:layout_marginRight="@dimen/padding_standard"
			android:background="@color/list_divider"/>

		<TextView
			android:id="@+id/number_of_thumbs"
			style="@style/TextWithImage.Secondary"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableLeft="@drawable/ic_thumbs_small"
			tools:text="13"/>
	</LinearLayout>
</LinearLayout>